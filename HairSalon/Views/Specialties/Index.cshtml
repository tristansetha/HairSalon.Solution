@{
    Layout = "_Layout";
}

    <h1>Specialties</h1>

    <h3><a href='/specialties/new'>Add a specialty</a></h3>

    @if (@Model.Count == 0)
    {
      <h3>No specialties have been added yet!</h3>
    }

    @foreach (var specialty in Model)
    {
      <h3><a href='/specialties/@specialty.GetId()'>@specialty.GetDescription()</a></h3>
    }

    <form action='/specialties/delete' method="post">
      <button id='deleteAll' name='deleteAll'type="submit">Clear all specialties</button>
    </form>


    <p><a href='/'>Back home</a></p>