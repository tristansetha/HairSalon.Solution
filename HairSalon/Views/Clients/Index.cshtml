@{
  Layout = "_Layout";
}

<div class="container">

<h1>Clients</h1>

@if (@Model.Count == 0)
{
    <h3>No clients have been added yet!</h3>
}

@foreach (var client in Model)
{
    <h3><a href='/clients/@client.GetId()'>@client.GetName()</a></h3>
}

<form action='/clients/delete' method="post">
    <button id='deleteAll' name='deleteAll'type="submit">Clear all clients</button>
</form>

<p><a href='/'>Back home</a></p>

</div>