@{
  Layout = "_Layout";
}

  <h1>Stylists</h1>
  <h2>Stylists:</h2>
  @foreach (var stylist in Model)
  {
    <p><a href='/stylists/@stylist.GetId()'>Name: @stylist.GetName() (add client or specialty)</a></p>
  }


  @if (@Model.Count != 0)
  {
    <h3><a href="/clients/new">Add a new client</a></h3>
  }

  <h3><a href="/stylists/new">Add a new stylist</a></h3>

  <form action='/stylists/delete' method="post">
    <button id='deleteAll' name='deleteAll'type="submit">Clear all stylists</button>
  </form>

  <p><a href='/'>Back home</a></p>
